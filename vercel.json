{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "GOOGLE_API_KEY": "@google_api_key",
    "PINECONE_API_KEY": "@pinecone_api_key",
    "PINECONE_ENVIRONMENT": "@pinecone_environment",
    "PINECONE_INDEX_NAME": "ai-training-rag",
    "OPENAI_API_KEY": "@openai_api_key"
  },
  "functions": {
    "src/app/api/*/route.ts": {
      "maxDuration": 60
    }
  }
}